<?xml version="1.0" encoding="UTF-8"?>
<syntax name="cpp" xmlns="https://www.nova.app/syntax">
  <meta>
    <name>C++</name>
    <type>compiled</type>
    <preferred-file-extension>cpp</preferred-file-extension>
  </meta>

  <detectors>
    <extension priority="1.0">cpp,h,hpp,cc,cxx,hxx,C,H,c++,h++</extension>
  </detectors>

  <comments>
    <single>
      <expression>//</expression>
    </single>
    <multiline>
      <starts-with>
        <expression>/*</expression>
      </starts-with>
      <ends-with>
        <expression>*/</expression>
      </ends-with>
    </multiline>
  </comments>
  
  <brackets>
    <pair open="{" close="}" />
    <pair open="[" close="]" />
    <pair open="(" close=")" />
  </brackets>
  
  
  

  <tree-sitter>
    <highlights path="cpp/highlights.scm" />
    <highlights path="c/highlights.scm" />
  </tree-sitter>
</syntax>
